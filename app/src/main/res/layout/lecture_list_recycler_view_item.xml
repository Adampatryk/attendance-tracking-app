<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@color/design_default_color_on_secondary"
    android:padding="8dp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lbl_lecture_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="20sp"
        android:paddingTop="20sp"
        android:singleLine="true"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Introduction to Computer Sciencentroduction to computer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lbl_lecture_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_lbl_lecture_title"
        tools:text="Web Development" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lbl_lecture_prof"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_lbl_lecture_title"
        tools:text="Prof adamkulpa" />
</androidx.constraintlayout.widget.ConstraintLayout>