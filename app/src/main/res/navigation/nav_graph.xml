<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.attendance.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_lectureListFragment"
            app:destination="@id/tabFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_tabFragment"
            app:destination="@id/tabFragment" />
    </fragment>
    <fragment
        android:id="@+id/lectureDetailFragment"
        android:name="com.example.attendance.ui.tabcontainer.lecture.lecturedetail.LectureDetailFragment"
        android:label="lecture_detail_fragment"
        tools:layout="@layout/lecture_detail_fragment" >
        <action
            android:id="@+id/action_lectureDetailFragment_to_scanFragment"
            app:destination="@id/scanFragment" />
        <argument
            android:name="lecture_id"
            app:argType="integer"
            android:defaultValue="-1" />

    </fragment>
    <fragment
        android:id="@+id/scanFragment"
        android:name="com.example.attendance.ui.scan.ScanFragment"
        android:label="scan_fragment"
        tools:layout="@layout/scan_fragment" >
        <action
            android:id="@+id/action_scanFragment_to_lectureDetailFragment"
            app:destination="@id/lectureDetailFragment"
            app:popUpTo="@id/scanFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/tabFragment"
        android:name="com.example.attendance.ui.tabcontainer.TabFragment"
        android:label="tab_fragment"
        tools:layout="@layout/tab_fragment" >
        <action
            android:id="@+id/action_tabFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_tabFragment_to_lectureDetailFragment"
            app:destination="@id/lectureDetailFragment" />
        <action
            android:id="@+id/action_tabFragment_to_moduleDetailFragment"
            app:destination="@id/moduleDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/moduleDetailFragment"
        android:name="com.example.attendance.ui.tabcontainer.module.moduledetail.ModuleDetailFragment"
        android:label="module_detail_fragment"
        tools:layout="@layout/module_detail_fragment" />
</navigation>