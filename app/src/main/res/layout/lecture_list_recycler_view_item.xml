<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/common_google_signin_btn_text_light_normal_background"
    android:paddingHorizontal="16dp"
    >

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lbl_lecture_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="20sp"
        android:singleLine="true"
        android:layout_marginVertical="15dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_lbl_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Introduction to Computer Sciencentroduction to computer" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lbl_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_lbl_lecture_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="9:00" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_lbl_lecture_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="13dp"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="Web Development" />

