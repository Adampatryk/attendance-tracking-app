<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.attendance.ui.login.LoginFragment"
        android:label="login_fragment"
        tools:layout="@layout/login_fragment" >
        <action
            android:id="@+id/action_loginFragment_to_lectureListFragment"
            app:destination="@id/lectureListFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true"/>
    </fragment>
    <fragment
        android:id="@+id/lectureListFragment"
        android:name="com.example.attendance.ui.lecturelist.LectureListFragment"
        android:label="lecture_list_fragment"
        tools:layout="@layout/lecture_list_fragment" >
        <action
            android:id="@+id/action_lectureListFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>